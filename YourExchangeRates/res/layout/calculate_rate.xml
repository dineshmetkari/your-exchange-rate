<!--android:background="@android:color/transparent"-->
<!--android:padding="@dimen/BottomIconPadding" android:onClick="onClickSMSHandler" android:src="@drawable/sms">-->
<!--</ImageButton>-->
<ImageButton
android:id="@+id/ibSMS"
android:layout_width="wrap_content"
android:background="@android:color/transparent"
android:padding="@dimen/BottomIconPadding" android:src="@drawable/about" android:onClick="onClickAboutHandler">
</ImageButton>
</TableRow>
</LinearLayout>
